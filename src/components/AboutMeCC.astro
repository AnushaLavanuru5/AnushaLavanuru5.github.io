---
// data imports
import education from "@/data/education.ts"
import languages from "../data/languages.ts"
import hardSkills from "@/data/hardSkills"
import softSkills from "@/data/softSkills"

// component imports
import EduDetail from "./EduDetail.astro";
import SkillCard from "./SkillCard.astro";

// config import
import {ME} from '@/config';

---

<div class="relative flex flex-col gap-8 text-n700 dark:text-n200 w-full mt-10 px-4">
    {/*Description or About me -- Section*/}
    <div class="mb-4">
        <p class="text-base text-justify">
            {ME.aboutMe}
        </p>
    </div>
    {/*Education section*/}
    <div class="mb-4">
        <h2 class="text-3xl font-bold mb-4">Education</h2>
        <div class="flex flex-col gap-6">
            {education.map((edu) => (
                    <EduDetail eduData={edu}/>
            ))}
        </div>
    </div>
    {/*Skills section*/}
    <div class="mb-4">
        <h2 class="text-3xl font-bold mb-4">Technical Skills</h2>
        <h2 class="text-xl font-bold mb-4">Languages</h2>
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4 mb-4">
            {hardSkills[0].map((skill) => (
                    <SkillCard {...skill} showDescription={true}/>
            ))}
        </div>
        <h2 class="text-xl font-bold mb-4">Frameworks & Tools</h2>
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4 mb-4">
            {hardSkills[1].map((skill) => (
                    <SkillCard {...skill} showDescription={true}/>
            ))}
        </div>
        <h2 class="text-xl font-bold mb-4">ML & AI Libraries</h2>
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4 mb-4">
            {hardSkills[3].map((skill) => (
                    <SkillCard {...skill} showDescription={true}/>
            ))}
        </div>
        <h2 class="text-xl font-bold mb-4">Databases</h2>
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4 mb-4">
            {hardSkills[2].map((skill) => (
                    <SkillCard {...skill} showDescription={true}/>
            ))}
        </div>
        <h2 class="text-xl font-bold mb-4">DevOps & Cloud</h2>
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4 mb-4">
            {hardSkills[3].map((skill) => (
                    <SkillCard {...skill} showDescription={true}/>
            ))}
        </div>
    </div>
    {/*Hobbies section*/}
    <!-- <div class="mb-4">
        <h2 class="text-2xl font-bold mb-4">Soft Skills</h2>
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
            {softSkills.map((skill) => (
                    <SkillCard {...skill} showDescription={false}/>
            ))}
        </div>
    </div> -->
    {/*Languages section*/}
    <!-- <div class="mb-4">
        <h2 class="text-2xl font-bold mb-4">Languages</h2>
        <div class="flex flex-col gap-2">
            {
                languages.map((lang) => (
                    lang.show ? <p>{lang.name} - {lang.level}</p> : null
                ))
            }
        </div>
    </div> -->
</div>